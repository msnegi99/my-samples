<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/canvasDrawingBtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Canvas Drawing Example" />

    <Button
        android:id="@+id/simpleCanvasExampleBtn"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Simple Canvas Example" />

    <Button
        android:id="@+id/canvasClippingExampleBtn"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Canvas Clipping Example" />

    <Button
        android:id="@+id/surfaceViewExampleBtn"
        android:layout_marginTop="30dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="SurfaceView Example" />

</LinearLayout>


