<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="TimePicker Mode : Clock"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/simpleTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/yellow"
            android:timePickerMode="clock"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="TimePicker Mode : Spinner"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/simpleTimePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:timePickerMode="spinner"/>

        <Button
            android:id="@+id/idBtnPickTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Pick Time"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/idTVSelectedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Time"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/calendar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_date_range"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/calendar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_date_range"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/calendar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_date_range"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aug"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13"
                android:textColor="@android:color/black"
                android:textSize="30dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sDayOfWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/teal_200"
                android:gravity="center"
                android:text="THURSDAY"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:calendarViewShown="false"
            android:spinnersShown="true"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spnDateFormat"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtDateFormat"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/laydate"
            android:background="@drawable/textboarder"
            android:text="" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="First Date"
            android:text="10/10/2013 11:30:10"
            android:id="@+id/firstDate" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Second Date"
            android:text="13/10/2013 20:35:55"
            android:id="@+id/secondDate" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="differece"
            android:id="@+id/diffDate" />

        <Button
            android:id="@+id/btn_calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate" />


        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/laydate"
            android:background="@drawable/textboarder"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:text="Compare Two Dates" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/calendar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_date_range"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="" />

        <Button
            android:id="@+id/btn_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compare with current date" />

        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/laydate"
            android:background="@drawable/textboarder"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:text="Sort An array of Dates" />

        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/laydate"
            android:background="@drawable/textboarder"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:text="Style DatePickerDialog and CalendarView Components" />

    </LinearLayout>

</ScrollView>