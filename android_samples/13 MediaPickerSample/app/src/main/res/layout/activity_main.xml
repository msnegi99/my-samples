<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:minHeight="200dp"
            android:layout_margin="50dp"
            android:background="@drawable/buttons_border" />

        <TextView
            android:id="@+id/pathtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/buttons_border" />

        <Button
            android:id="@+id/imageDownloadbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Image Download" />

        <Button
            android:id="@+id/imageLoadbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Image Load (Local)" />

        <Button
            android:id="@+id/imageCamerabtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Image Camera" />

        <Button
            android:id="@+id/imageSavebtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Image Save" />

        <Button
            android:id="@+id/videoPickbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Video Pick" />

        <Button
            android:id="@+id/videoRecordbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Video Record" />

        <Button
            android:id="@+id/audiobtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Audio : Select" />

        <Button
            android:id="@+id/documentsbtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Document : Select" />

    </LinearLayout>

</ScrollView>